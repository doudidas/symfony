{% extends 'base.html.twig' %}
{% block body %}
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>
          Ajout d'un type
        </h1>
        <div class="form-group">
          {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
          {{ form_errors(form) }}
          {{ form_row(form.manufacturer,{'attr':{'class':'form-control'}}) }}
          {{ form_row(form.model,{'attr':{'class':'form-control'}}) }}
          {{ form_row(form.description,{'attr':{'class':'form-control'}}) }}
        </div>
        {{ form_row(form.save,{'attr':{'class':'btn btn-default'}}) }}
        {{ form_end(form) }}
      </div>
    </div>
  </body>
{% endblock %}
