{% extends 'base.html.twig' %}
{% block body %}
  <div class="container">
    <div class="jumbotron">
      <h1>
        Ajout d'une vente
      </h1>
      <div class="form-group">
        {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
        {{ form_row(form.type_id,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_row(form.user_id,{'attr':{'class':'form-control'}}) }}
      </div>
      <div class="form-group">
      {{ form_row(form.count,{'attr':{'class':'form-control'}}) }}
    </div>
    <div class="form-group">
    {{ form_row(form.date,{'attr':{'class':'form-control'}}) }}
  </div>
      {{ form_row(form.save,{'attr':{'class':'btn btn-default'}}) }}
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
